@model List<Lab.Capas.MVC.Models.EmployeeView>
@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>
<h5>La cantidad de empleados activos es: @Model.Count</h5>
<br />
<div id="boton">
    @Html.ActionLink("Add new Employee", "Create", "Employee")
</div>

<br />
<table class="table">
    <tr style="background-color:darkslateblue; color:whitesmoke; text-align:center">
        <td>Employee Id</td>
        <td>Last Name</td>
        <td>First Name</td>
        <td>Title</td>
        <td>Address</td>
        <td>City</td>
        <td colspan="2">Accion</td>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.EmployeeId</td>
            <td>@employee.LastName</td>
            <td>@employee.FirstName</td>
            <td>@employee.Title</td>
            <td>@employee.Address</td>
            <td>@employee.City</td>
            <td>@Html.ActionLink("Eliminar", "Delete", new { id = employee.EmployeeId })</td>
            <td>@Html.ActionLink("Modificar", "Update", employee)</td>
        </tr>
    }
</table>
